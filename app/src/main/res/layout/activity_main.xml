<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="end"
            android:padding="20dp"
            android:background="@color/black"/>

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="10dp"
        android:background="@color/black">

        <Button
            android:id="@+id/btnClear"
            android:text="C"
            style="@style/CalcButton_Operation"/>

        <Button
            android:id="@+id/btnPercent"
            android:text="%"
            style="@style/CalcButton_Operation"/>

        <Button
            android:id="@+id/btnBack"
            android:text="⌫"
            style="@style/CalcButton_Operation"/>

        <Button
            android:id="@+id/btnDivide"
            android:text="÷"
            style="@style/CalcButton_Operator"/>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btnMultiply"
            android:text="×"
            style="@style/CalcButton_Operator"/>

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btnSubtract"
            android:text="-"
            style="@style/CalcButton_Operator"/>

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            style="@style/CalcButton_Operator"/>

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_columnSpan="2"
            style="@style/CalcButton_Number"/>

        <Button
            android:id="@+id/btnDot"
            android:text="."
            style="@style/CalcButton_Number"/>
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            style="@style/CalcButton_Operation"/>


        <Button
            android:id="@+id/btnEquals"
            android:text="="
            style="@style/CalcButton_Equals"/>
    </GridLayout>

</LinearLayout>
